<h2>Welcome</h2>

<h3>Here are your tasks</h3>

<%= form_for @task do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <%= form.submit %>
<% end %>

<ul>
  <%= render @tasks %>
</ul>
